rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // - Users can create their own user document.
    // - Users can only read or update their own document.
    // - Users cannot delete their own document or view others.
    match /users/{userId} {
      allow create: if request.resource.data.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // Clients Collection
    // - Authenticated users can list their own clients.
    // - Users can only get, update, or delete their own clients.
    // - Users can only create clients with their own userId.
    match /clients/{clientId} {
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Text Blocks Collection
    // - Authenticated users can list their own text blocks.
    // - Users can only get, update, or delete their own text blocks.
    // - Users can only create text blocks with their own userId.
    match /text_blocks/{textBlockId} {
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Document Templates Collection
    // - Authenticated users can list their own templates.
    // - Users can only get, update, or delete their own templates.
    // - Users can only create templates with their own userId.
    match /doc_templates/{templateId} {
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
