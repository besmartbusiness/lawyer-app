rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // --- Clients Collection ---
    // Users can only read, write, and delete their own client documents.
    // The userId on the document must match the authenticated user's UID.
    match /clients/{clientId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // --- Text Blocks Collection ---
    // Users can only manage their own text blocks.
    match /text_blocks/{textBlockId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // --- Document Templates Collection ---
    // Users can only manage their own document templates.
    match /doc_templates/{templateId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
