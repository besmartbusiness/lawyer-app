rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Clients Collection
    match /clients/{clientId} {
      // Allow listing documents only if the query is for the user's own documents.
      // This works even if the collection is empty.
      allow list: if request.auth != null;
      
      // Allow getting a single document if the user is the owner.
      allow get: if isOwner(resource.data.userId);

      // Allow creating, updating, deleting if the user is the owner of the document being written.
      allow write: if isOwner(request.resource.data.userId);
    }

    // Text Blocks Collection
    match /text_blocks/{blockId} {
      allow list: if request.auth != null;
      allow get: if isOwner(resource.data.userId);
      allow write: if isOwner(request.resource.data.userId);
    }

    // Document Templates Collection
    match /doc_templates/{templateId} {
      allow list: if request.auth != null;
      allow get: if isOwner(resource.data.userId);
      allow write: if isOwner(request.resource.data.userId);
    }
  }
}
