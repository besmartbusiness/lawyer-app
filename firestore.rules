rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read, write, update, and delete their own client documents
    match /clients/{clientId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Allow users to manage their own text blocks
    match /text_blocks/{textBlockId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow users to manage their own document templates
    match /doc_templates/{docTemplateId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
