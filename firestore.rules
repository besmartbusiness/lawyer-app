rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /clients/{clientId} {
      // Allow users to read, update, and delete their own documents.
      // `resource` refers to the document as it exists in the database.
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Allow users to create documents if they are authenticated and the new 
      // document's userId matches their own.
      // `request.resource` refers to the document that will exist after the write.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
