rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /uploads/{userId}/{allPaths=**} {
      // Allow anyone to read the files. This is necessary for the server-side
      // AI flow to be able to process the document via its download URL.
      // The URLs are unguessable, providing security by obscurity.
      allow read;

      // Only allow the authenticated user to write to their own folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
